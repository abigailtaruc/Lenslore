<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/search_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:padding="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginVertical="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/search_profile_icon_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/field_background"
            app:cardCornerRadius="60dp"
            android:elevation="32dp">

            <ImageView
                android:id="@+id/search_profile_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/profile_icon"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/search_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/search_profile_icon_layout"
            android:text="Aaron Black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="30dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/search_unique_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/search_username"
            android:textSize="16dp"
            android:text="\@aaronblack1"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

</RelativeLayout>